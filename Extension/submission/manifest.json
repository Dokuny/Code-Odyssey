{
  "manifest_version": 3,
  "name": "Code Odessey Code Submission Extension",
  "version": "1.0",
  "description": "Code Odessey 문제 제출용 익스텐션",
  "icons": {
    "16": "thumbnail.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "thumbnail.png"
  },
  "permissions": ["unlimitedStorage", "storage"],
  "host_permissions": [
    "https://school.programmers.co.kr/",
    "https://swexpertacademy.com/",
    "https://www.acmicpc.net/",
    "https://solved.ac/api/v3/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://school.programmers.co.kr/*"],
      "js": ["scripts/programmers.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://swexpertacademy.com/*"],
      "js": ["scripts/swexpertacademy.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.acmicpc.net/status?*from_mine*"],
      "js": ["scripts/baekjoon/solved.js"]
    },
    {
      "matches": ["https://www.acmicpc.net/problem/*"],
      "js": ["scripts/baekjoon/problem.js"]
    },
    {
      "matches": ["https://www.acmicpc.net/submit/*"],
      "js": ["scripts/baekjoon/submit.js"]
    }
  ]
}
